<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- default theme selector -->
  <style name="Theme.Light" parent="@style/Theme.AppCompat.Light">
      <item name="actionBarStyle">@style/Widget.Light.ActionBar.Blue.Bold</item>
      <item name="actionBarSize">@dimen/actionbar_height</item>
      <item name="actionButtonStyle">@style/Widget.Light.ActionButton.LowDensity</item>
  </style>

  <style name="TextAppearance.Widget.ActionBar.Title.Inverse"
      parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
      <item name="android:textSize">@dimen/actionbar_title_size</item>
  </style>

  <style name="TextAppearance.Widget.ActionBar.Subtitle.Inverse"
      parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse">
      <item name="android:textSize">@dimen/actionbar_subtitle_size</item>
  </style>

  <style name="Widget.Light.ActionButton.LowDensity" parent="@style/Widget.AppCompat.Light.ActionButton">
      <item name="android:minWidth">@dimen/actionbar_item_width</item>
  </style>

</resources>
